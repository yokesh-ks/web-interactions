{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "sliderswipe:dev": "yarn workspace slider-swipe dev",
    "commit": "git-cz",
    "storybook": "yarn workspace @webinteractions/common storybook",
    "build-storybook": "yarn workspace @webinteractions/common build-storybook",
    "build-common-lib": "yarn workspace @webinteractions/common build-lib"
  },
  "dependencies": {
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "styled-components": "^5.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
